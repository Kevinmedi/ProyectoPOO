<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE jasperReport PUBLIC "-//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport name="AsistenciaRangoFechas" language="java"
              pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20"
              rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Parámetros para mostrar el rango en el título -->
    <parameter name="fechaDesde" class="java.lang.String"/>
    <parameter name="fechaHasta" class="java.lang.String"/>


    <!-- Campos de la entidad Asistencia -->
    <field name="empleado" class="com.tuempresa.sistema_de_Control_de_Asistencia_para_Empleados.modelo.Empleado"/>
    <field name="estado" class="com.tuempresa.sistema_de_Control_de_Asistencia_para_Empleados.modelo.EstadoAsistencia"/>
    <field name="fechaHora" class="java.time.LocalDateTime"/>
    <field name="clasificacion" class="com.tuempresa.sistema_de_Control_de_Asistencia_para_Empleados.modelo.ClasificacionAsistencia"/>
    <field name="horasExtras" class="java.lang.Double"/>

    <!-- ===== TÍTULO ===== -->
    <title>
        <band height="90">

            <image scaleImage="RetainShape">
                <reportElement x="0" y="5" width="60" height="40"/>
                <imageExpression class="java.io.InputStream"><![CDATA[
                    this.getClass().getClassLoader().getResourceAsStream("reports/logo.jpg")
                ]]></imageExpression>
            </image>

            <staticText>
                <reportElement x="70" y="5" width="485" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE ASISTENCIA POR RANGO DE FECHAS]]></text>
            </staticText>


            <textField>
                <reportElement x="70" y="40" width="200" height="18"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[
        "Desde: " + ($P{fechaDesde} == null || $P{fechaDesde}.trim().equals("") ? "-" : $P{fechaDesde})
    ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="270" y="40" width="200" height="18"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[
        "Hasta: " + ($P{fechaHasta} == null || $P{fechaHasta}.trim().equals("") ? "-" : $P{fechaHasta})
    ]]></textFieldExpression>
            </textField>


            <!-- Fecha/hora de impresión -->
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="350" y="60" width="205" height="18"/>
                <textElement textAlignment="Right">
                    <font size="9" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- ===== CABECERA ===== -->
    <columnHeader>
        <band height="22">

            <rectangle>
                <reportElement x="0" y="0" width="555" height="20"
                               mode="Opaque" backcolor="#E0E0E0"/>
            </rectangle>

            <staticText><reportElement x="0"   y="0" width="80"  height="20"/><textElement textAlignment="Center"><font isBold="true" size="10"/></textElement><text><![CDATA[Código]]></text></staticText>
            <staticText><reportElement x="80"  y="0" width="150" height="20"/><textElement textAlignment="Center"><font isBold="true" size="10"/></textElement><text><![CDATA[Empleado]]></text></staticText>
            <staticText><reportElement x="230" y="0" width="70"  height="20"/><textElement textAlignment="Center"><font isBold="true" size="10"/></textElement><text><![CDATA[Estado]]></text></staticText>
            <staticText><reportElement x="300" y="0" width="110" height="20"/><textElement textAlignment="Center"><font isBold="true" size="10"/></textElement><text><![CDATA[Fecha / Hora]]></text></staticText>
            <staticText><reportElement x="410" y="0" width="80"  height="20"/><textElement textAlignment="Center"><font isBold="true" size="10"/></textElement><text><![CDATA[Clasif.]]></text></staticText>
            <staticText><reportElement x="490" y="0" width="65"  height="20"/><textElement textAlignment="Center"><font isBold="true" size="10"/></textElement><text><![CDATA[Extra (h)]]></text></staticText>

        </band>
    </columnHeader>

    <!-- ===== DETALLE ===== -->
    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="80" height="18"/>
                <textElement textAlignment="Center"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{empleado}.getCodigo()]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="80" y="0" width="150" height="18"/>
                <textElement textAlignment="Left"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[
                    $F{empleado}.getNombre() + " " + $F{empleado}.getApellido()
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="230" y="0" width="70" height="18"/>
                <textElement textAlignment="Center"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{estado}.toString()]]></textFieldExpression>
            </textField>

            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="300" y="0" width="110" height="18"/>
                <textElement textAlignment="Center"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[
                    java.sql.Timestamp.valueOf($F{fechaHora})
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="410" y="0" width="80" height="18"/>
                <textElement textAlignment="Center"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{clasificacion}.toString()]]></textFieldExpression>
            </textField>

            <textField pattern="#0.00">
                <reportElement x="490" y="0" width="65" height="18"/>
                <textElement textAlignment="Right"><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$F{horasExtras}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ===== PIE DE PÁGINA ===== -->
    <pageFooter>
        <band height="25">
            <line><reportElement x="0" y="0" width="555" height="1"/></line>

            <staticText>
                <reportElement x="0" y="5" width="250" height="18"/>
                <textElement><font size="8" isItalic="true"/></textElement>
                <text><![CDATA[Creativa Asistencia - Asistencia por rango de fechas]]></text>
            </staticText>

            <textField>
                <reportElement x="405" y="5" width="150" height="18"/>
                <textElement textAlignment="Right"><font size="8"/></textElement>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
