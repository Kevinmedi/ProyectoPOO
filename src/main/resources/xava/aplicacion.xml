<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE aplicacion SYSTEM "dtds/aplicacion.dtd">

<aplicacion nombre="CreativaAsistencia">

    <!-- Módulo por defecto -->
    <modulo-defecto>
        <controlador nombre="Typical"/>
    </modulo-defecto>

    <!-- MÓDULO EMPLEADO -->
    <modulo nombre="Empleado">
        <modelo nombre="Empleado"/>
        <!-- Usa el controlador 'Empleado' definido en controllers.xml -->
        <controlador nombre="Empleado"/>
    </modulo>

    <!-- MÓDULO ASISTENCIA -->
    <modulo nombre="Asistencia">
        <modelo nombre="Asistencia"/>
        <!-- Usa el controlador 'Asistencia' definido en controllers.xml -->
        <controlador nombre="Asistencia"/>
    </modulo>

</aplicacion>
